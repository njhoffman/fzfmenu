DEFAULTFILTER="${DEFAULTFILTER:-cat}"
FZFHEADER="${FZFHEADER:-alt-x:EDIT} "
FZFBINDING="${FZFBINDING:-alt-x:execute(touch $BUTLERTMPDIR/editorf)+accept}"

